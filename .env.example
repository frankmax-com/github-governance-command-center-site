# GitHub Governance Factory - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Configuration (Governance Rules & Project Data)
MONGODB_CONNECTION_STRING=mongodb://localhost:27017
MONGODB_DATABASE=governance_factory
MONGODB_USERNAME=
MONGODB_PASSWORD=governance-admin-pass-change-me

# Supabase Configuration (Analytics & Issue Tracking)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Redis Configuration (Caching & Event Streaming)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=governance-redis-pass-change-me
REDIS_DB=0

# =============================================================================
# AI PROVIDER FACTORY INTEGRATION
# =============================================================================

# AI Provider Factory Service (Handles all AI providers internally)
AI_PROVIDER_FACTORY_URL=http://localhost:8001
AI_PROVIDER_FACTORY_API_KEY=your_ai_provider_factory_api_key

# =============================================================================
# GITHUB API INTEGRATION
# =============================================================================

# GitHub API Configuration
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_API_URL=https://api.github.com
WEBHOOK_SECRET=your-webhook-secret-key

# Default Repository Settings
DEFAULT_GITHUB_OWNER=your_github_username_or_org
DEFAULT_GITHUB_REPO=your_default_repo

# =============================================================================
# MICROSERVICES CONFIGURATION
# =============================================================================

# Governance Engine Service
GOVERNANCE_ENGINE_HOST=0.0.0.0
GOVERNANCE_ENGINE_PORT=8000

# Issue Generator Service
ISSUE_GENERATOR_HOST=0.0.0.0
ISSUE_GENERATOR_PORT=8001

# Agent Assignment Service
AGENT_ASSIGNMENT_HOST=0.0.0.0
AGENT_ASSIGNMENT_PORT=8002

# Analytics Service
ANALYTICS_HOST=0.0.0.0
ANALYTICS_PORT=8003

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_at_least_32_characters_long
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Health Check Configuration
HEALTH_CHECK_INTERVAL_SECONDS=30

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Environment Mode
ENVIRONMENT=development
DEBUG_MODE=false

# Mock Services (for testing without external dependencies)
MOCK_AI_PROVIDER_FACTORY=false
MOCK_GITHUB_API=false
